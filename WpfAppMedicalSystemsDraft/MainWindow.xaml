<Window x:Class="WpfAppMedicalSystemsDraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMedicalSystemsDraft"
        mc:Ignorable="d"
        Title="MainWindow" Height="494" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Menu">
                <MenuItem Header="Zarejestruj się" Click="Register_Click">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLogged}" Value="false">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsLogged}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
                <MenuItem Header="Zaloguj się" Click="Login_Click">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLogged}" Value="false">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsLogged}" Value="true">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
                <MenuItem Header="Wyjdź" Click="ExitApp_Click"/>
            </MenuItem>
            <MenuItem Header="Lekarze">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLogged}" Value="false">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
                <MenuItem Header="Zobacz lekarzy" Click="DoctorsList_Click"/>
            </MenuItem>
            <MenuItem Header="Wizyty">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLogged}" Value="false">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
                <MenuItem Header="Umów wizytę" Click="AddAppointment_Click"/>
            </MenuItem>
        </Menu>

        
        <!-- Login dialog section -->
        <Grid x:Name="LoginOverlay" Visibility="Collapsed">
            <Grid>
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.6"/>
                </Grid.Background>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" >
                    <Border BorderBrush="LightGray" BorderThickness="2" Background="White" CornerRadius="5">
                        <Grid Margin="20">
                            <StackPanel>
                                <TextBlock Text="Login" FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 10"/>
                                <TextBlock Text="Username:"/>
                                <TextBox x:Name="UsernameTextBox" Margin="0 0 0 10" Padding="5"/>
                                <TextBlock Text="Password:"/>
                                <PasswordBox x:Name="PasswordBox" Margin="0 0 0 10" Padding="5"/>
                                <Button Content="Login" Click="SubmitLogin_Click" HorizontalAlignment="Center" Width="80" Padding="5" Background="#2196F3" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>
